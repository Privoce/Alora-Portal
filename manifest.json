{
  "manifest_version": 2,
  "name": "Tab Manager",
  "version": "1.0",
  "description": "Your smart working assistant!",
  "permissions": [
    "tabs",
    "storage",
    "contextMenus",
    "chrome://favicon/"
  ],
  "chrome_url_overrides": {
    "newtab": "newTab.html"
  },
  "background": {
    "scripts": [
      "js/background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_icon": {
      "16": "images/icon16.png",
      "32": "images/icon32.png",
      "128": "images/icon128.png"
    },
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "images/icon16.png",
    "32": "images/icon32.png",
    "128": "images/icon128.png"
  }
}