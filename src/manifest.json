{
  "manifest_version": 2,
  "name": "Alora Portal",
  "version": "1.0.0",
  "description": "Yet Another Tab Manager",
  "permissions": ["tabs", "storage", "history", "chrome://favicon/"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": {
      "16": "icon-16.png",
      "32": "icon-32.png",
      "128": "icon-128.png"
    }
  },
  "icons": {
    "16": "icon-16.png",
    "32": "icon-32.png",
    "128": "icon-128.png"
  }
}
